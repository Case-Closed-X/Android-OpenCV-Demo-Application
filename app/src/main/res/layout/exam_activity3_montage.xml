<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamActivity3Montage">

    <TextView
        android:id="@+id/textViewExam3"
        android:layout_width="wrap_content"

        android:layout_height="70dp"

        android:layout_marginTop="35dp"

        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/exam_03"
        android:textColor="@color/orange"
        android:textSize="24sp"

        android:textStyle="bold"

        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="5dp"

        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewExam3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/code3"

                android:stateListAnimator="@null"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="470dp"
                android:layout_marginEnd="30dp"
                android:text="@string/ExamCode"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/purple_500"
                app:cornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancel"

                android:stateListAnimator="@null"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="@string/ExamCancel"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/text_Grey"
                app:cornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/code3"
                app:layout_constraintStart_toStartOf="@+id/code3"
                app:layout_constraintTop_toBottomOf="@+id/code3"
                app:rippleColor="?attr/colorButtonNormal" />

            <ImageView
                android:id="@+id/imageView3Montage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDescribe3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:scrollbars="horizontal|vertical"
                android:text="@string/describe3"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/code3"
                app:layout_constraintEnd_toEndOf="@+id/code3"
                app:layout_constraintStart_toStartOf="@+id/code3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3Montage" />

            <TextView
                android:id="@+id/textView3Montage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white"
                android:scrollbars="horizontal|vertical"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/code3"
                app:layout_constraintEnd_toEndOf="@+id/code3"
                app:layout_constraintStart_toStartOf="@+id/code3"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>