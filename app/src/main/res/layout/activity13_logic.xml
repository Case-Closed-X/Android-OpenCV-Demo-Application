<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity13Logic"

    android:fitsSystemWindows="true"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView13"

                android:layout_width="0dp"

                android:layout_height="70dp"
                android:background="@color/orange"

                android:fitsSystemWindows="true"

                android:gravity="center"
                android:text="@string/title_13"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image13_1"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <ImageView
                android:id="@+id/image13_2"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image13_1"
                app:layout_constraintStart_toEndOf="@+id/image13_1"
                app:layout_constraintTop_toTopOf="@+id/image13_1" />

            <Button
                android:id="@+id/logic"
                android:layout_width="330dp"
                android:layout_height="70dp"

                android:layout_marginTop="20dp"
                android:text="@string/Activity13Logic"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/orange"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="@+id/image13_2"
                app:layout_constraintStart_toStartOf="@+id/image13_1"
                app:layout_constraintTop_toBottomOf="@+id/image13_1" />
            <!--使用系统样式style="?attr/borderlessButtonStyle"，要删除app:backgroundTint="@color/orange"-->

            <ImageView
                android:id="@+id/imageLogic"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="@+id/logic"
                app:layout_constraintStart_toStartOf="@+id/logic"
                app:layout_constraintTop_toBottomOf="@+id/logic" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>