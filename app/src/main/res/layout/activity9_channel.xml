<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity9Channel"



    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_blue_dark"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView09" />

            <TextView
                android:id="@+id/textView09"

                android:layout_width="0dp"

                android:layout_height="70dp"
                android:layout_marginTop="30dp"


                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="@string/title_09"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image9"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/textView09"
                app:layout_constraintStart_toStartOf="@+id/textView09"
                app:layout_constraintTop_toBottomOf="@+id/textView09"
                app:srcCompat="@drawable/microsoft" />

            <Button
                android:id="@+id/channel"
                android:layout_width="300dp"
                android:layout_height="70dp"

                android:layout_marginTop="20dp"
                android:text="@string/Activity9ChannelButton"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="@+id/image9"
                app:layout_constraintStart_toStartOf="@+id/image9"
                app:layout_constraintTop_toBottomOf="@+id/image9" />

            <ImageView
                android:id="@+id/imageChannelB"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/channel"
                app:layout_constraintStart_toStartOf="@+id/channel"
                app:layout_constraintTop_toBottomOf="@+id/channel" />

            <ImageView
                android:id="@+id/imageChannelG"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/imageChannelB"
                app:layout_constraintStart_toStartOf="@+id/imageChannelB"
                app:layout_constraintTop_toBottomOf="@+id/imageChannelB" />

            <ImageView
                android:id="@+id/imageChannelR"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageChannelG"
                app:layout_constraintStart_toStartOf="@+id/imageChannelG"
                app:layout_constraintTop_toBottomOf="@+id/imageChannelG" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>