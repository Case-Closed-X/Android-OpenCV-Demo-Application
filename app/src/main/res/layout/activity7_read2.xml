<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity7Read2"

    android:fitsSystemWindows="true"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView07"

                android:layout_width="0dp"

                android:layout_height="70dp"
                android:background="@color/teal_700"

                android:fitsSystemWindows="true"

                android:gravity="center"
                android:text="@string/title_07"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image7"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/textView07"
                app:layout_constraintStart_toStartOf="@+id/textView07"
                app:layout_constraintTop_toBottomOf="@+id/textView07"
                app:srcCompat="@drawable/bg2" />

            <Button
                android:id="@+id/read2"
                android:layout_width="300dp"
                android:layout_height="70dp"

                android:layout_marginTop="20dp"
                android:text="@string/Activity7Read2Button"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="@+id/image7"
                app:layout_constraintStart_toStartOf="@+id/image7"
                app:layout_constraintTop_toBottomOf="@+id/image7" />

            <ImageView
                android:id="@+id/imageRead2"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/read2"
                app:layout_constraintStart_toStartOf="@+id/read2"
                app:layout_constraintTop_toBottomOf="@+id/read2" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/read2"
                app:layout_constraintStart_toStartOf="@+id/read2"
                app:layout_constraintTop_toBottomOf="@+id/read2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>