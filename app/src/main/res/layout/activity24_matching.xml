<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity24Matching"

    android:fitsSystemWindows="true"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView24"

                android:layout_width="0dp"

                android:layout_height="70dp"
                android:background="@color/orange"

                android:fitsSystemWindows="true"

                android:gravity="center"
                android:text="@string/title_24"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image24_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image24_2"
                app:layout_constraintTop_toTopOf="@+id/image24_2"
                app:srcCompat="@drawable/lena1" />

            <ImageView
                android:id="@+id/image24_2"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:srcCompat="@drawable/lena" />

            <Button
                android:id="@+id/button24Matching"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/Activity24Matching"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/orange"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image24_2" />
            <!--使用系统样式style="?attr/borderlessButtonStyle"，要删除app:backgroundTint="@color/orange"-->

            <ImageView
                android:id="@+id/image24Matching"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="@+id/button24Matching"
                app:layout_constraintStart_toStartOf="@+id/button24Matching"
                app:layout_constraintTop_toBottomOf="@+id/button24Matching" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>