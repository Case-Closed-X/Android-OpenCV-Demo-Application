<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity23Histogram"

    android:fitsSystemWindows="true"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView23"

                android:layout_width="0dp"

                android:layout_height="70dp"
                android:background="@color/purple_500"

                android:fitsSystemWindows="true"

                android:gravity="center"
                android:text="@string/title_23"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image23Histogram"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image23"
                app:layout_constraintTop_toTopOf="@+id/image23" />

            <ImageView
                android:id="@+id/image23EqualizationHistogram"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image23Equalization"
                app:layout_constraintTop_toTopOf="@+id/image23Equalization" />

            <ImageView
                android:id="@+id/image23"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                app:srcCompat="@drawable/round" />

            <ImageView
                android:id="@+id/image23Equalization"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button23Equalization" />

            <Button
                android:id="@+id/button23Equalization"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/Activity23Histogram"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/purple_500"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image23" />
            <!--使用系统样式style="?attr/borderlessButtonStyle"，要删除app:backgroundTint="@color/orange"-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>